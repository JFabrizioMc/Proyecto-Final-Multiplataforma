@model List<Productos>
    <h1>Productos</h1>
    @if (Model.Count == 0) {
        <p>No hay productos en stock</p>
    }

    <ul class="list">
    @foreach (var item in Model)
    {
        <li>@item.Foto</li>
        <li>@item.Nombre</li>
        <li>@item.PrecioUnit</li>
        <li>@item.Descripcion</li>
    }
    </ul>