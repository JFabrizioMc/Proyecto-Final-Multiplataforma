@model List<Productos>

@if (TempData["mensaje"] != null) {
    <div class="alert alert-success">
        @TempData["mensaje"]
    </div>
}

<h1>Ver por categorias - productos</h1>

<div class="row">
    @foreach (var item in Model){
    <div class="col-md-4 text-center my-3">
        @if (@item.Foto != null) {
            <img src="@item.Foto" width="100px" height="100px">
        }

        <p>@item.Nombre</p>

        <div>
            <a asp-action="Comprar" asp-route-codigo="@item.Id" class="btn btn-danger btn-lg">Comprar</a>
        </div>
        

        
        


    </div>
    }
</div>      