@model List<Productos>

<h1>Lista de productos</h1>

@if (Model.Count == 0) {
    <p>No hay noticias registradas</p>
}

<ul class="list">
@foreach (var item in Model)
{
    <li>@item.Nombre</li>
    <li><img src="@item.Foto" alt="Foto referencial del producto"></li>
    <li>@item.PrecioUnit</li>
    <li><p>@item.Descripcion</p></li>
}
</ul>