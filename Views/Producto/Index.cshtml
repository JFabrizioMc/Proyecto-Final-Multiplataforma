@model List<Productos>

@if (TempData["mensaje"] != null) {
    <div class="alert alert-success">
        @TempData["mensaje"]
    </div>
}

<h1>Productos</h1>
@if (Model.Count == 0) {
    <p>No hay productos en stock</p>
}
<div class="row">
    @foreach (var item in Model){
    <div class="col-md-4 text-center my-3">       
        <img src="@item.Foto" width="200px" height="200px">
        <p>@item.Nombre</p>
        @if (User.Identity.IsAuthenticated) {
            <form method="post">
                <div>
                    <input type="hidden" value="@item.Id" name="Id">
                    <button class="btn btn-lg" style="color:white; background-color:#001f3f">Comprar S/.@item.PrecioUnit</button>                
                </div>
            </form>
        }else{
            <a asp-controller="Cuenta" asp-action="Login" class="btn" style="color:white; background-color:#001f3f">Comprar S/.@item.PrecioUnit</a>
        }
    </div>
    }
</div>      
