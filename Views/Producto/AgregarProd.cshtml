@model Productos
<h1  class="text-center">Agregar Producto(s)</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        Nombre: 
        <input asp-for="Nombre" class="form-control">
    </div>

    <div class="form-group">
        Foto: 
        <input asp-for="Foto" class="form-control">
    </div>

    <div class="form-group">
        Precio Unitario:
        <input asp-for="PrecioUnit" class="form-control">        
    </div>

    <div class="form-group">
        Descripcion: 
        <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="CategoriaId" class="form-control">
            @foreach (var item in (List<Categorias>)ViewBag.Categorias)
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>

    <button class="form-control btn btn-primary">AÃ±adir</button>
    
</form>