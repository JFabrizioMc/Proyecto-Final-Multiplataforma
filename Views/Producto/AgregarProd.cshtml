@model Productos
<h1>Agregar Producto(s)</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        Nombre: 
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        Foto: 
        <input asp-for="Foto" class="form-control">
    </div>
    <div class="form-group">
        Precio Unitario:
        <input asp-for="PrecioUnit" class="form-control">        
    </div>
    <div class="form-group">
        Descripcion: 
        <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
    <div class="form-group">
        <label for="">Categoría: </label>
        <select name="" id="" class="form-control">
            <option value="">Teclados</option>
            <option value="">Pantallas</option>
            <option value="">Audífonos</option>
        </select>
    </div>
    <button class="form-control btn btn-primary">Añadir</button>
</form>