                              <li class="nav-item">
                        <a class="nav-link" asp-controller="Roles" asp-action="CrearRol">Crear Rol</a>
                        </li>

                         <li class="nav-item">
                        <a class="nav-link" asp-controller="Roles" asp-action="AsociarRol">Asociar Rol</a>
                        </li> 
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="AgregarProd">Agregar Productos</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="QuitarProd">Quitar Productos</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="PromoProd">Agregar una Promocion/Descuento</a>
                        </li>                          
                        }
                         <li class="nav-item active">
                        <a class="nav-link" >@User.Identity.Name<span class="sr-only">(current)</span></a>
                         </li>

                        <li class="nav-item">
                         <a class="nav-link" asp-controller="Cuenta" asp-action="Logout">Cerrar Sesión</a>
                        </li>
                     }

                </ul>
            </div>
        </nav>        
    </div>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
