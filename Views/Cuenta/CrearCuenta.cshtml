@model CrearCuentaViewModel

<div class="container-fluid"></div>
    <h1 class="text-center">Crear Cuenta</h1>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label asp-for="Correo"></label>
            <input asp-for="Correo" class="form-control" placeholder="example@example.com">
        </div>

        <div class="form-group">
            <label asp-for="Password1"></label>
            <input asp-for="Password1" class="form-control" placeholder="Contraseña">
        </div>

        <div class="form-group">
            <label asp-for="Password2"></label>
            <input asp-for="Password2" class="form-control" placeholder="Confirmar Contraseña">
        </div>
        
        <button class="form-control btn btn-primary">Registrar</button>
    </form>
</div>